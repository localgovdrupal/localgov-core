<?php

/**
 * @file
 * LocalGovDrupal Core module file.
 */

/**
 * Implements hook_theme().
 */
function localgov_core_theme($existing, $type, $theme, $path) {
  return [
    'localgov_page_header_block' => [
      'variables' => [
        'title' => '',
        'subtitle' => NULL,
        'lede' => NULL,
      ],
      'render element' => 'block',
    ],
  ];
}

/**
 * Implements hook_template_preprocess_default_variables_alter().
 */
function localgov_core_template_preprocess_default_variables_alter(&$variables) {
  if (theme_get_setting('localgov_base_remove_css')) {
    $variables['localgov_base_remove_css'] = TRUE;
  }
  if (theme_get_setting('localgov_base_remove_js')) {
    $variables['localgov_base_remove_js'] = TRUE;
  }
}

/**
 * Implements hook_modules_installed().
 */
function localgov_core_modules_installed($modules) {

  // If localgov_core.settings.install_default_blocks is set to FALSE, don't
  // install default blocks. This lets site owners opt out if desired.
  $installDefaultBlocks = TRUE;
  $config = \Drupal::config('localgov_core.settings');
  if ($config) {
    if ($config->get('install_default_blocks') === FALSE) {
      $installDefaultBlocks = FALSE;
    }
  }
  if ($installDefaultBlocks) {
    /** @var \Drupal\localgov_core\Service\DefaultBlockInstaller $defaultBlockInstaller */
    $defaultBlockInstaller = \Drupal::service('localgov_core.default_block_installer');
    foreach ($modules as $module) {
      $defaultBlockInstaller->install($module);
    }
  }
}
